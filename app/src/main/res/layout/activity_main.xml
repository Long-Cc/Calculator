<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_output"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical|right"
        android:hint="结果"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical|right"
        android:hint="请输入运算数值"
        android:textSize="20sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <RadioGroup
                android:id="@+id/rg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/rb_2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="二进制" />

                <RadioButton
                    android:id="@+id/rb_8"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="八进制" />

                <RadioButton
                    android:id="@+id/rb_10"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:checked="true"
                    android:text="十进制" />

                <RadioButton
                    android:id="@+id/rb_16"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:text="十六进制"
                    />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linlayout_16"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_16_A"
                style="@style/Button16"
                android:text="A" />

            <Button
                android:id="@+id/btn_16_B"
                style="@style/Button16"
                android:text="B" />

            <Button
                android:id="@+id/btn_16_C"
                style="@style/Button16"
                android:text="C" />

            <Button
                android:id="@+id/btn_16_D"
                style="@style/Button16"
                android:text="D" />

            <Button
                android:id="@+id/btn_16_E"
                style="@style/Button16"
                android:text="E" />

            <Button
                android:id="@+id/btn_16_F"
                style="@style/Button16"
                android:text="F" />
        </LinearLayout>

        <TableLayout
            android:id="@+id/tablayout_num"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:background="#ffffff"
            android:stretchColumns="*" >

            <TableRow android:layout_weight="1" >

                <Button
                    android:id="@+id/btn_clean"
                    style="@style/ButtonStyle"
                    android:text="C" />

                <Button
                    android:id="@+id/btn_delete"
                    style="@style/ButtonStyle"
                    android:text="delete" />

                <Button
                    android:id="@+id/btn_divide"
                    style="@style/ButtonStyle"
                    android:text="/" />

                <Button
                    android:id="@+id/btn_multiply"
                    style="@style/ButtonStyle"
                    android:text="*" />
            </TableRow>

            <TableRow android:layout_weight="1" >

                <Button
                    android:id="@+id/btn_num_7"
                    style="@style/ButtonStyle"
                    android:text="7" />

                <Button
                    android:id="@+id/btn_num_8"
                    style="@style/ButtonStyle"
                    android:text="8" />

                <Button
                    android:id="@+id/btn_num_9"
                    style="@style/ButtonStyle"
                    android:text="9" />

                <Button
                    android:id="@+id/btn_add"
                    style="@style/ButtonStyle"
                    android:text="+" />
            </TableRow>



            <TableRow android:layout_weight="1" >

                <Button
                    android:id="@+id/btn_num_4"
                    style="@style/ButtonStyle"
                    android:text="4" />

                <Button
                    android:id="@+id/btn_num_5"
                    style="@style/ButtonStyle"
                    android:text="5" />

                <Button
                    android:id="@+id/btn_num_6"
                    style="@style/ButtonStyle"
                    android:text="6" />

                <Button
                    android:id="@+id/btn_minus"
                    style="@style/ButtonStyle"
                    android:text="-" />
            </TableRow>




            <TableRow android:layout_weight="1" >

                <Button
                    android:id="@+id/btn_num_1"
                    style="@style/ButtonStyle"
                    android:text="1" />

                <Button
                    android:id="@+id/btn_num_2"
                    style="@style/ButtonStyle"
                    android:text="2" />

                <Button
                    android:id="@+id/btn_num_3"
                    style="@style/ButtonStyle"
                    android:text="3" />

                <Button
                    android:id="@+id/btn_point"
                    style="@style/ButtonStyle"
                    android:text="." />
            </TableRow>
        </TableLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="1dp"
            android:layout_weight="1" >

            <Button
                android:id="@+id/btn_num_0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#CCFFFF"
                android:onClick="click"
                android:text="0"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btn_equal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#33FFFF"
                android:onClick="click"
                android:text="="
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>